@model UserCreationModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
    <title>Create</title>
</head>
<body style="margin:20px;">
    <form asp-action="Create" class="ui form">
        <div class="field">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" type="text" placeholder="Username">
        </div>
        <div class="field">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="text" placeholder="Email">
        </div>
        <div class="field">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="text" placeholder="Password">
        </div>

        <button asp-action="Create" class="ui button" type="submit">Submit</button>
    </form>
</body>
</html>
